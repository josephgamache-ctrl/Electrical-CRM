# Pem2 Services Inventory - Production Environment Variables
# Copy this file to .env.production and fill in the secure values

# Database Configuration
DB_NAME=pem2_inventory
DB_USER=pem2_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_HOST=ma_electrical-db
DB_PORT=5432

# Application Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_TO_GENERATED_SECRET_KEY

# Timezone
TZ=America/New_York

# Domain Configuration (update when you have your domain)
DOMAIN_NAME=inventory.pem2services.com
FRONTEND_URL=https://inventory.pem2services.com
BACKEND_URL=https://inventory.pem2services.com/api

# DigitalOcean Spaces Configuration (for photo storage)
# Fill these in once you create your Spaces bucket
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=pem2-inventory-photos
DO_SPACES_KEY=YOUR_SPACES_ACCESS_KEY
DO_SPACES_SECRET=YOUR_SPACES_SECRET_KEY
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@pem2services.com
SMTP_PASSWORD=YOUR_EMAIL_APP_PASSWORD

# Monitoring (optional)
SENTRY_DSN=YOUR_SENTRY_DSN_IF_USING

# Production Settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
