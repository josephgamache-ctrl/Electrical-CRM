# MA Electrical Inventory - Environment Variables Template
# Copy this file to .env and fill in the values
# NEVER commit .env files to git!

# JWT Secret Key - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Database Configuration
DB_NAME=ma_electrical
DB_USER=postgres
DB_PASSWORD=your-secure-database-password-here
DB_HOST=ma_electrical-db
DB_PORT=5432

# JWT Token Expiration (in minutes)
# Recommended: 15-60 minutes for production
ACCESS_TOKEN_EXPIRE_MINUTES=60
